#version 450
layout(local_size_x = 64) in;

layout(set = 0, binding = 0) buffer BufferA {
    int a[];
};

layout(set = 0, binding = 1) buffer BufferB {
    int b[];
};

layout(set = 0, binding = 2) buffer BufferC {
    int c[];
};

void main() {
    uint idx = gl_GlobalInvocationID.x;
    c[idx] = a[idx] + b[idx];
}
